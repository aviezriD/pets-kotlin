<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/layout2">
    <data>
        <import type="com.mx.mascotas.presentation.ui.utils.RuleKt"/>
        <variable name="rule" type="com.mx.mascotas.presentation.ui.utils.RuleKt"/>
        <variable name="registryViewModel" type="com.mx.mascotas.presentation.ui.login.registry.RegistryViewModel"/>
    </data>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="128dp"
                    android:src="@drawable/mascota" app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginEnd="16dp" android:layout_marginRight="16dp" android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp" android:id="@+id/imageView2"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView5"
                    app:layout_constraintStart_toStartOf="@+id/imageView2" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/imageView2" android:text="@string/title_registro"
                    android:textSize="28sp" android:textColor="@color/common_google_signin_btn_text_dark_focused"
                    android:textStyle="bold"/>
            <!--TEXT INPUT LAYOUT USUARIO-->
            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="@+id/imageView2"
                    app:layout_constraintStart_toStartOf="@+id/imageView2" android:id="@+id/textInputLayout3"
                    android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/textView5">
                <!--NOMBRE DE USUARIO-->
                <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/overname" android:id="@+id/user_register" android:inputType="text"/>
            </com.google.android.material.textfield.TextInputLayout>
            <!--TEXT INPUT LAYOUT NOMBRE-->
            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="@+id/textInputLayout3"
                    app:layout_constraintStart_toStartOf="@+id/textInputLayout3" android:id="@+id/textInputLayout4"
                    android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/textInputLayout7">
                <!--CAMPO DE NOMBRE-->
                <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/name" android:id="@+id/name" android:inputType="textPersonName"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!--TEXT INPUT LAYOUT CORREO-->
            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="@+id/textInputLayout4"
                    app:layout_constraintStart_toStartOf="@+id/textInputLayout4" android:id="@+id/textInputLayout5"
                    app:layout_constraintTop_toBottomOf="@+id/textInputLayout28" android:layout_marginTop="16dp">
                <!--CORREO-->
                <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/emial" android:id="@+id/email_register"
                        android:inputType="textEmailAddress"/>
            </com.google.android.material.textfield.TextInputLayout>
            <!--TEXT INPUT LAYOUT CONTRASEÑA-->
            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:passwordToggleEnabled="true"
                    app:layout_constraintEnd_toEndOf="@+id/textInputLayout5"
                    app:layout_constraintStart_toStartOf="@+id/textInputLayout5" android:id="@+id/textInputLayout6"
                    android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/textInputLayout3">
                <!--CONTRASEÑA-->
                <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/password" android:inputType="textPassword"
                        android:id="@+id/pwd_register"/>
            </com.google.android.material.textfield.TextInputLayout>
            <!--TEXT INPUT LAYOUT VALIDA CONTRASEÑA-->
            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:passwordToggleEnabled="true"
                    app:layout_constraintEnd_toEndOf="@+id/textInputLayout6"
                    app:layout_constraintStart_toStartOf="@+id/textInputLayout6" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/textInputLayout6" android:id="@+id/textInputLayout7">
                <!--VALIDA CONTRASEÑA-->
                <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/validatepdw" android:inputType="textPassword"
                        android:id="@+id/pwd_register2"/>
            </com.google.android.material.textfield.TextInputLayout>

            <RadioGroup android:id="@+id/checks" android:layout_height="wrap_content" android:layout_width="0dp"
                        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginEnd="24dp"
                        android:layout_marginRight="24dp" android:layout_marginLeft="24dp"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/textInputLayout5">
                <!--TIPO DUEÑO-->
                <RadioButton
                        android:id="@+id/dueno"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="16dp"
                        android:checked="true"
                        android:text="@string/dueno"/>
                <!--TIPO VETERINARIO-->
                <RadioButton
                        android:id="@+id/veterinario"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:text="@string/veterinario"/>
            </RadioGroup>
            <!--BOTÒN DE REGISTRO-->
            <Button
                    android:text="@string/registry_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/button2"
                    style="@style/Widget.AppCompat.Button.Colored"

                    tools:layout_editor_absoluteY="815dp" app:layout_constraintStart_toStartOf="@+id/checks"
                    app:layout_constraintEnd_toEndOf="@+id/checks"/>


            <!--TEXT INPUT LAYOUT APELLIDOS-->
            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/textInputLayout4" android:id="@+id/textInputLayout27"
                    app:layout_constraintEnd_toEndOf="@+id/textInputLayout4"
                    app:layout_constraintStart_toStartOf="@+id/textInputLayout4"
            >
                <!--APELLIDOS-->
                <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/last_name" android:inputType="text" android:id="@+id/last_name"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!--TEXT INPUT LAYOUT TELÉFONO-->
            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/textInputLayout27"
                    app:layout_constraintEnd_toEndOf="@+id/textInputLayout27"
                    app:layout_constraintStart_toStartOf="@+id/textInputLayout27"
                    android:id="@+id/textInputLayout28" app:layout_constraintHorizontal_bias="0.0">
                <!--TELÉFONO-->
                <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/phone" android:inputType="phone" android:id="@+id/phone"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!--TEXT INPUT LAYOUT cedula-->
            <com.google.android.material.textfield.TextInputLayout

                    app:visible="@{registryViewModel.enable}"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textInputLayoutCedula"
                    app:layout_constraintEnd_toEndOf="@+id/textInputLayout5"
                    app:layout_constraintTop_toBottomOf="@+id/checks"
                    android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="@+id/textInputLayout5">
                <!--CEDULA-->
                <com.google.android.material.textfield.TextInputEditText

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/cedula" android:inputType="text" android:id="@+id/cedula"/>
            </com.google.android.material.textfield.TextInputLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</layout>