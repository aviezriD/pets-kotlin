<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">


    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textInputLayout17"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/textInputLayout16" android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp" android:layout_marginRight="8dp" android:layout_marginEnd="8dp">

                <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Nombre Veterinaria" android:id="@+id/vet_name"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textInputLayout14"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textInputLayout17"
                    android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginRight="8dp"
                    android:layout_marginEnd="8dp">

                <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Dirección"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textInputLayout13"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textInputLayout14"
                    android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginRight="8dp"
                    android:layout_marginEnd="8dp">

                <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Teléfono"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textInputLayout16"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="32dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView27" android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp" android:layout_marginRight="8dp" android:layout_marginEnd="8dp">

                <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="RFC Veterinaria" android:id="@+id/textInputEditText"/>
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                    android:text="Registro de Veterinaria"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView26" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.496"
                    android:textSize="28dp" android:layout_marginTop="32dp" app:layout_constraintTop_toTopOf="parent"
                    android:textStyle="bold"/>
    <TextView
            android:text="Ingresa los datos de tu Veterinaria"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView27" android:textSize="20dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView26"
            android:textStyle="bold" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="45dp"
            android:layout_marginStart="45dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"/>
    <TextView
            android:text="@string/servicios"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView20" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout13" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
    />
    <TextView
            android:text="Días y Horas Laborales"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView21" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/floatingActionButton3"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"/>

    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="395dp"
            android:layout_height="60dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView20" android:id="@+id/recyclerView2"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true" app:srcCompat="@drawable/ic_playlist_add_white_24px"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/recyclerView2" android:id="@+id/floatingActionButton3"/>

    <TextView
            android:text="@string/diaInicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/diaInicio"
            app:layout_constraintTop_toBottomOf="@+id/textView21" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:layout_marginTop="8dp"/>

    <Spinner
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerDiaInicio" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/diaInicio" android:layout_marginTop="8dp"/>

    <TextView
            android:text="@string/diaFin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/diaFin"
            app:layout_constraintTop_toBottomOf="@+id/spinnerDiaInicio" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:layout_marginTop="8dp"/>

    <Spinner
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerDiaFin" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/diaFin" android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="@string/horaInicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/horaInicio"
            app:layout_constraintTop_toBottomOf="@+id/spinnerDiaFin" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:layout_marginTop="8dp"/>

        <Spinner
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/spinnerHoraInicio" android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/horaInicio" android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"/>

        <TextView
                android:text="@string/horaFin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/horaFin"
                app:layout_constraintTop_toBottomOf="@+id/spinnerHoraInicio" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:layout_marginTop="8dp"/>

        <Spinner
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/spinnerHoraFin" android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/horaFin" android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"/>

        <!--Botón registrar-->
        <Button
                android:text="@string/registry_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/button2"
                style="@style/Widget.AppCompat.Button.Colored" android:layout_marginBottom="1dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/spinnerHoraFin"
                app:layout_constraintStart_toStartOf="@+id/spinnerHoraFin"
                app:layout_constraintEnd_toEndOf="@+id/spinnerHoraFin"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>